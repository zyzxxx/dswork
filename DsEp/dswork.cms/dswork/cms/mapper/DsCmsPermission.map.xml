<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
	"-//ibatis.apache.org//DTD Mapper 3.0//EN" 
	"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="dswork.cms.model.DsCmsPermission">

<insert id="insert" parameterType="dswork.cms.model.DsCmsPermission">
	insert into DS_CMS_PERMISSION
	(ID, SITEID, ACCOUNT, AUDIT, EDITALL, EDITOWN, PUBLISH)
	values
	(#{id}, #{siteid}, #{account}, #{audit}, #{editall}, #{editown}, #{publish})
</insert>

<delete id="delete">
	delete from DS_CMS_PERMISSION where SITEID=#{siteid} and ACCOUNT=#{account}
</delete>

<update id="update" parameterType="dswork.cms.model.DsCmsPermission">
	update DS_CMS_PERMISSION set
		AUDIT=#{audit},
		EDITALL=#{editall},
		EDITOWN=#{editown},
		PUBLISH=#{publish}
	where SITEID=#{siteid} and ACCOUNT=#{account}
</update>

<resultMap id="result" type="dswork.cms.model.DsCmsPermission">
	<id property="id" column="ID" />
	<result property="siteid" column="SITEID" />
	<result property="account" column="ACCOUNT" />
	<result property="audit" column="AUDIT" />
	<result property="editall" column="EDITALL" />
	<result property="editown" column="EDITOWN" />
	<result property="publish" column="PUBLISH" />
</resultMap>

<sql id="columns">ID, SITEID, ACCOUNT, AUDIT, EDITALL, EDITOWN, PUBLISH</sql>

<select id="select" resultMap="result">
	select <include refid="columns" /> from DS_CMS_PERMISSION where SITEID=#{siteid} and ACCOUNT=#{account}
</select>

<select id="queryListSite" resultMap="dswork.cms.model.DsCmsSite.result">
	select <include refid="dswork.cms.model.DsCmsSite.columns" /> from DS_CMS_SITE
</select>
<select id="queryListCategory" resultMap="dswork.cms.model.DsCmsCategory.result">
	select <include refid="dswork.cms.model.DsCmsCategory.columns" /> from DS_CMS_CATEGORY
	where SITEID=#{siteid}
</select>
<select id="queryListPermission" resultMap="dswork.cms.model.DsCmsPermission.result">
	select <include refid="dswork.cms.model.DsCmsPermission.columns" /> from DS_CMS_PERMISSION
	where SITEID=#{siteid}
</select>

</mapper>
