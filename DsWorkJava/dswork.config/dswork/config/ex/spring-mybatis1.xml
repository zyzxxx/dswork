<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
	        http://www.springframework.org/schema/beans 
	        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	   default-autowire="byName" default-lazy-init="false">
	<bean id="masterDataSource1" class="${dswork.datasource:org.apache.commons.dbcp.BasicDataSource}" destroy-method="close">
		<property name="driverClassName" value="${jdbc1.driverClassName:dswork.jdbc.DriverSpy}" />
		<property name="url" value="${jdbc1.url}" />
		<property name="username" value="${jdbc1.username}" />
		<property name="password" value="${jdbc1.password}" />
		
		<!-- 配置一个连接在池中最小生存的时间，单位是毫秒 -->
		<property name="minEvictableIdleTimeMillis" value="${jdbc1.minEvictableIdleTimeMillis:900000}" />
		<!-- 配置间隔多久才进行一次检测，检测需要关闭的空闲连接，单位是毫秒 -->
		<property name="timeBetweenEvictionRunsMillis" value="${jdbc1.timeBetweenEvictionRunsMillis:900000}" />
		
		<property name="initialSize" value="${jdbc1.initialSize:1}" />
		<property name="minIdle" value="${jdbc1.minIdle:1}" />
		<property name="maxIdle" value="${jdbc1.maxIdle:50}" />
		<property name="maxActive" value="${jdbc1.maxActive:50}" />
		<property name="maxWait" value="${jdbc1.maxWait:60000}" />
		
		<property name="validationQuery" value="${jdbc1.validationQuery:select 'x'}" />
		<property name="testWhileIdle" value="${jdbc1.testWhileIdle:true}" />
		<property name="testOnBorrow" value="${jdbc1.testOnBorrow:false}" />
		<property name="testOnReturn" value="${jdbc1.testOnReturn:false}" />
		
		<property name="poolPreparedStatements" value="${jdbc1.poolPreparedStatements:false}" />
	</bean>
	<bean id="slaveDataSource1" class="${dswork.datasource:org.apache.commons.dbcp.BasicDataSource}" destroy-method="close">
		<property name="driverClassName" value="${jdbc1.read.driverClassName:${jdbc1.driverClassName:dswork.jdbc.DriverSpy}}" />
		<property name="url" value="${jdbc1.read.url:${jdbc1.url}}" />
		<property name="username" value="${jdbc1.read.username:${jdbc1.username}}" />
		<property name="password" value="${jdbc1.read.password:${jdbc1.password}}" />
		<property name="minEvictableIdleTimeMillis" value="${jdbc1.read.minEvictableIdleTimeMillis:${jdbc1.minEvictableIdleTimeMillis:900000}}" />
		<property name="timeBetweenEvictionRunsMillis" value="${jdbc1.read.timeBetweenEvictionRunsMillis:${jdbc1.timeBetweenEvictionRunsMillis:900000}}" />
		
		<property name="initialSize" value="${jdbc1.read.initialSize:${jdbc1.initialSize:1}}" />
		<property name="minIdle" value="${jdbc1.read.minIdle:${jdbc1.minIdle:1}}" />
		<property name="maxIdle" value="${jdbc1.read.maxIdle:${jdbc1.maxIdle:50}}" />
		<property name="maxActive" value="${jdbc1.read.maxActive:${jdbc1.maxActive:50}}" />
		<property name="maxWait" value="${jdbc1.read.maxWait:${jdbc1.maxWait:60000}}" />
		
		<property name="validationQuery" value="${jdbc1.read.validationQuery:${jdbc1.validationQuery:select 'x'}}" />
		<property name="testWhileIdle" value="${jdbc1.read.testWhileIdle:${jdbc1.testWhileIdle:true}}" />
		<property name="testOnBorrow" value="${jdbc1.read.testOnBorrow:${jdbc1.testOnBorrow:false}}" />
		<property name="testOnReturn" value="${jdbc1.read.testOnReturn:${jdbc1.testOnReturn:false}}" />
		
		<property name="poolPreparedStatements" value="${jdbc1.read.poolPreparedStatements:${jdbc1.poolPreparedStatements:false}}" />
	</bean>
	<bean id="dataSource1" class="dswork.core.datasource.DataSource">
		<property name="masterDataSource" ref="masterDataSource1" />
		<property name="slaveDataSource" ref="slaveDataSource1" />
	</bean>
	<bean id="sqlSessionFactory1" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="plugins">
			<list>
				<bean class="dswork.core.mybatis.OffsetLimitInterceptor">
	   				<property name="properties">
	   					<props>
							<prop key="name">${jdbc1.dialect.name:mysql}</prop>
						</props>
					</property>
				</bean>
			</list>
		</property>
		<property name="typeHandlers">
			<list>
				<bean class="dswork.core.mybatis.LikeTypeHandler" />
				<bean class="dswork.core.mybatis.LikePrefixTypeHandler" />
				<bean class="dswork.core.mybatis.LikeSuffixTypeHandler" />
			</list>
		</property>
		<property name="typeAliases">
			<list>
				<value>dswork.core.mybatis.LikeTypeHandler</value>
				<value>dswork.core.mybatis.LikePrefixTypeHandler</value>
				<value>dswork.core.mybatis.LikeSuffixTypeHandler</value>
			</list>
		</property>
		<property name="mapperLocations">
			<list>
				<value>classpath*:/dswork/config/mybatis/${jdbc1.dialect.name:mysql}.map.xml</value>
				<value>${dswork1.m1:classpath*:/x/mapper/**/*.map.xml}</value>
				<value>${dswork1.m2:classpath*:/x/mapper/**/*.map.xml}</value>
				<value>${dswork1.m3:classpath*:/x/mapper/**/*.map.xml}</value>
				<value>${dswork1.m4:classpath*:/x/mapper/**/*.map.xml}</value>
				<value>${dswork1.m5:classpath*:/x/mapper/**/*.map.xml}</value>
			</list>
		</property>
		<property name="dataSource" ref="dataSource1"/>
	</bean>
	<bean id="sqlSessionTemplate1" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory1" />
	</bean>
</beans>
